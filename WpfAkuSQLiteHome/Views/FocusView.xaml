<UserControl x:Class="WpfAkuSQLiteHome.Views.FocusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAkuSQLiteHome.Views"
             xmlns:model="clr-namespace:WpfAkuSQLiteHome.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="LightBlue">
    <Grid>
        <StackPanel>
            <TextBox x:Name="Txt1" Width="100" Height="50" FocusVisualStyle="{Binding Path=IsTxt1Focused}" ></TextBox>
            <Button x:Name="But1" Width="100" Height="50" >1</Button>
            
            <TextBox x:Name="Txt2" Width="100" Height="50" ></TextBox>
            <Button x:Name="But2" Width="100" Height="50" >2</Button>
            
            <TextBox x:Name="Txt3" Width="100" Height="50" ></TextBox>
            <Button x:Name="But3" Width="100" Height="50" >3</Button>
        </StackPanel>
    </Grid>
</UserControl>
